<% content_for :body_content_title do %>
  <%= @latest.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%=raw @latest.title %>
  </div>
  
  <div>
    <h3>Date</h3>
    <%=raw @latest.date %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%=raw @latest.description %>
  </div>
  
  <div>
    <h3>Image</h3>
    <%= image_fu @latest.image, nil %>
  </div>
  
  <div>
    <h3>Image2</h3>
    <%= image_fu @latest.image2, nil %>
  </div>
  
  <div>
    <h3>Image3</h3>
    <%= image_fu @latest.image3, nil %>
  </div>
  
  <div>
    <h3>Brochure</h3>
    <%= link_to 'brochure', @latest.brochure.url %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="latests">
    <% @latests.each do |latest| %>
      <li>
        <%= link_to latest.title, latest_url(latest) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
